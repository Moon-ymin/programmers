// ë‚´ê°€ í‘¼ ë°©ë²•
class Solution {
    public String solution(String my_string, String letter) {
        String answer = "";
        for(int i=0; i<my_string.length(); i++) {
            if ( my_string.charAt(i) != letter.charAt(0) ){
                answer = answer + my_string.charAt(i);
            }
        }
        return answer;
    }
}

// ë‹¤ë¥¸ í’€ì´
class Solution {
    public String solution(String my_string, String letter) {
        String answer = "";

        answer = my_string.replace(letter, "");
        return answer;
    }
}

